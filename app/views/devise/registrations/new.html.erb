<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix">
    <%= f.label :email %><br />
    <div class="input"><%= f.text_field :email, :class => 'span6' %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :password %><br />
    <div class="input"><%= f.password_field :password, :class => 'span6' %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :password_confirmation %><br />
    <div class="input"><%= f.password_field :password_confirmation, :class => 'span6' %></div>
  </div>

  <div class="actions">
     <div><%= f.submit "Sign up", :class => 'btn primary' %></div>
  </div>  
<% end %>

<% content_for :nav_action_buttons do %>
  <%= render :partial => "devise/shared/links" %>
<% end %>

