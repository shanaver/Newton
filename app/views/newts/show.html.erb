<style>
  #newt {width:500px;border:1px solid #bebebe;padding:6px;color:#666;}
</style>

<p>
  <b>Title:</b>
  <%= @newt.title %>
</p>

<p>
  <b>ID:</b>
  <%= @newt.uniq_id %>
</p>

<p style="width:700px;">
  <b>Content:</b>
  <div id="newt"><%= raw(@newt.content) %></div>
</p>

</p>
<textarea style="width:700px;height:40px;font-size:9px">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
<script src="<%= get_newton_script_url %>" type="text/javascript"></script>
<div id="newt-<%= @newt.uniq_id %>"></div>
</textarea>
</p>

<% content_for :sidebar_content do %>
<%= link_to 'Edit', edit_newton_path(:id => @newt.uniq_id, :secret => @newt.uniq_secret), :class => 'btn' %> 
<%= link_to 'Back', newts_path, :class => 'btn' %>
<% end %>


