function newt_load(o){
  
  var e = null;
  var n;
  
  if( typeof o  == "object" ){
    e = o.element;
    n = o.newtid;
  }else{
    n = o;
  }
  
  jQuery.ajax({
    url: 'http://<%= DOMAIN %>/newt/' + n + '.json',
    cache: true,
    crossDomain: true,
    dataType: 'jsonp',
    accepts: {
        text: "text/html",
        json: "application/json",
        all: "*/*"
    },
    success: function(c){
      
      if(e){
        $(e).html(c);
      }else{
        $('#newt-' + n).html(c);
      }
      
    },
    error: function(jqXHR, textStatus, errorThrown){
      console.log( jqXHR );
      console.log( errorThrown );
    }
  });    
  
}

function load_newts(){
  
  $('[id^=newt]').each( function(i, e) {

    var n;
    var s;

    n = $(e).attr('id');
    s = n.split('-');

    var o = {newtid:s[1], element:e};
    
    console.log( 'found newt #' + (i+1) + ': ' + s[1] );
    
    newt_load(o);
  
  });   
}  

