<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="clearfix">
    <%= f.label :email %><br />
    <div class="input"><%= f.text_field :email, :class => 'span6' %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :password %><br />
    <div class="input"><%= f.password_field :password, :class => 'span6' %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
      <div class="input">
        <ul class="inputs-list">
          <li>
            <label>
              <%= f.check_box :remember_me %> 
              <span>Remember me (So I don't have to keep signing in)</span>
            </label>
          </li>
        </ul>
      </div>
    </div>
  <% end -%>
  
  <div class="actions">
     <div><%= f.submit "Sign in", :class => 'btn primary' %></div>
  </div>
  
<% end %>

<% content_for :nav_action_buttons do %>
  <%= render :partial => "devise/shared/links" %>
<% end %>