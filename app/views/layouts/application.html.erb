<!DOCTYPE html>
<html>
<head>
  <title>Newton</title>
  <%= csrf_meta_tag %>
  
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
  <%= stylesheet_link_tag 'style' %>
  
  <script src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-dropdown.js" type="text/javascript"></script>
  <script src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-scrollspy.js" type="text/javascript"></script>
  
  <%= javascript_include_tag :defaults, 'bootstrap-alerts' %>
  <%= yield(:javascript_includes) %>

</head>

<body>
  
  <div data-dropdown="dropdown" class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <h3><a href="/">Newton</a></h3>
        <ul class="nav">
          <li class="active"><a href="/">Home</a></li>
          <li><%= link_to 'Create a Newt', new_newt_path %></li>
        </ul>
        <!-- form action="" class="pull-left">
          <input type="text" placeholder="Search">
        </form -->
        <ul class="nav secondary-nav">
          <li class="dropdown">
            <a class="dropdown-toggle" href="#">My Newts</a>
            <ul class="dropdown-menu">
              <li><a href="#">Secondary link</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Another link</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div><!-- /topbar-inner -->
  </div><!-- .topbar -->
  
<div class="container-fluid">
  
  <div class="sidebar">  
  
  <%= yield(:sidebar_content) %>
  
  </div><!-- .sidebar -->    
  
  <div class="content">
  
  <% if notice.present?%>
    <div id="flash">
      <div class="alert-message warning fade in" data-alert="alert">
        <a class="close" href="#">×</a>
        <p><%= notice %></p>
      </div>
    </div>
  <% end %>
  <% if alert.present? %>
    <div id="flash">
      <div class="alert-message error fade in" data-alert="alert">
        <a class="close" href="#">×</a>
        <p><%= alert %></p>
      </div>
    </div>
  <% end %>
  
  <%= yield(:alert_content) %>

  <%= yield %>
  
  </div><!-- .content --> 
  
</div><!-- .container-fluid -->  
  


</body>
</html>
